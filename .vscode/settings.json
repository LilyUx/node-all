{
  "compile-hero.disable-compile-files-on-did-save-code": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true },
    { "language": "vue", "autoFix": true },
    "html",
    "vue"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact"
  },
  "prettier.printWidth": 80, //一行的字符数，如果超过会进行换行，默认为80
  "prettier.semi": true, //一个tab代表几个空格数，默认为80
  "prettier.useTabs": false,
  "prettier.trailingComma": "es5", //一个tab代表几个空格数，默认为80
  "prettier.tabWidth": 2, //一个tab代表几个空格数，默认为80
  "prettier.singleQuote": false, //字符串是否使用单引号，默认为false，使用双引号
  "prettier.jsxSingleQuote": false, //行位是否使用分号，默认为true
  "prettier.bracketSpacing": true, //对象大括号直接是否有空格，默认为true，效果：{ foo: bar }
  "prettier.jsxBracketSameLine": true,
  "prettier.arrowParens": "avoid",
  "prettier.htmlWhitespaceSensitivity": "strict",
  "prettier.vueIndentScriptAndStyle": true,
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.detectIndentation": false,
  "editor.tabSize": 2, //vscode设置的缩进量
  "editor.formatOnSave": true, //保存时候自动格式化
  "window.zoomLevel": 0,
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vetur.format.options.tabSize": 2,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.suggestSelection": "first",
  "git.autofetch": true,
  "git.confirmSync": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // "workbench.sideBar.location": "right",
  "editor.columnSelection": false,
  "todo-tree.tree.showScanModeButton": false,
  "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "terminal.integrated.shellArgs.windows": null,
  "bookmarks.saveBookmarksInProject": true,
  "bookmarks.sideBar.expanded": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#eeaa9c",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#fcd337",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#5dbe8a",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "editor.semanticTokenColorCustomizations": null
}
